    <p hidden><%= search %></p>
    <script>
        var substring = "<%= search %>";
        var allBooks = ["Leaves Of Grass","The Sun And Her Flowers","The Grapes Of Wrath","Lord Of The Flies","To Kill A Mockingbird","Dune"];
        var isFound = false
        for(var i = 0; i<allBooks.length;i++)
        {
            if(allBooks[i].toLocaleLowerCase().includes(substring.toLocaleLowerCase()))
                {
                    document.getElementById(allBooks[i]).style.display = "block";
                    isFound = true;
                }
        }
        if(!isFound)
            document.getElementById("Error").style.display = "block";
    </script>
